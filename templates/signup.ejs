<% layout('baza') %>

<div style="padding: 10px;">
    <h1 class="text-center">Регистрация</h1>
    <hr>
    <% if(err) {%>
        <div class="error_block"> 
        <%= err  %>
        </div>
    <%}%>
    
        <form action="signup" method="post" accept-charset="utf-8" class="regfield">
            <div class="form-group">
                <label class="control-label" for="name">Логин: </label>
                <input required="true" class="form-control" onblur="validateName('name','has-warning')" onfocus="focusName('name')" type="text" name="login" id="name" placeholder="Введите Ваше имя" >
            </div>
                
            <div class="form-group">
                <label class="control-label" for="email">E-mail: </label>
                <input required="true" class="form-control" type="text" onblur="validateEmail('has-error')" onfocus="focusEmail()" name="email" id="email" placeholder="Введите Ваш e-mail" >
            </div>
                
            <div class="form-group">
                <label class="control-label" for="password">Пароль: </label>
                <input required="true"  class="form-control" type="password" onblur="validateName('password','has-error')" onfocus="focusName('password')" name="pwd" id="password" placeholder="Придумайте пароль" >
            </div>
                
            <div class="form-group">
                <label class="control-label" for="pw_c">Подтверждение пароля: </label>
                <input required="true"  class="form-control" type="password" onblur="validatePassword('has-error')" onfocus="focusName('pw_c')" id="pw_c" placeholder="Повторите пароль" >
            </div>

            <div class="form-group">
                <input class="btn btn-primary btn-lg" style="outline: none;" value="Зарегистрироваться" type="submit" id="submit">
            </div>
        </form>
        
    </div>
