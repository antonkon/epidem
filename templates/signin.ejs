<% layout('baza') %>

        <div style="padding: 10px;">
            <h1 class="text-center">Вход в систему</h1>
            <hr>
			<% if(err) {%>
				<div class="error_block"> 
				<%= err  %>
				</div>
    		<%}%>
            <form action="signin" method="post" accept-charset="utf-8" class="regfield">
                <div class="form-group">
                    <label class="control-label" for="email">E-mail: </label>
                    <input required="true" class="form-control" type="text" onblur="validateEmail('has-error')" onfocus="focusEmail()" name="email" id="email" placeholder="Введите Ваш e-mail" >
                </div>
                    
                <div class="form-group">
                    <label class="control-label" for="password">Пароль: </label>
                    <input required="true" class="form-control" type="password" onblur="validateName('password','has-error')" onfocus="focusName('password')" name="pwd" id="password" placeholder="Введите пароль" >
                </div>
               
                <div class="form-group center">
                    <input class="btn btn-primary btn-lg" style="outline: none;" value="Войти" onmouseover="setSubmitEnabledLogin();" type="submit" id="submit" >
                </div>
                <a href="signup" style="font-size: 18px;" >
                    Регистрация
                </a>
            </form>
        </div>
